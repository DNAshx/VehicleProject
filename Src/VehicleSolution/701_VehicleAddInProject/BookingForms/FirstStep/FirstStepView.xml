<?xml version="1.0" encoding="utf-8" ?>
<NovaForm Name="frmGreenTransportStartView" Title="FirstStepView" DialogBehavior="OkAndCancel" FormType="Wizard" xmlns="http://www.evidence.ch/nova/forms" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.evidence.ch/nova/forms http://rnd.glauxsoft.ch/nova/2.0.25.0/NovaForm.xsd">
  
  
  <NovaWizardPage Name="pageVehicle" Layout="w:16">
    <NovaGroup Name="groupVehicle" Layout="w:16">
      <NovaDateTime Name="StartDate" Label="From:" />
      <NovaDateTime Name="EndDate" Label="To:" />
      <NovaCombo EvdSourceAttr="EvdObj.s_Language" Name="VehicleType" Label="Vehicle Class:" />
      <NovaCombo EvdSourceAttr="EvdObj.s_Language" Name="VehicleClass" Label="Vehicle Type:" />

      <!--<NovaRef Name="Vehicle" Label="Choose Vehicle" />-->    
      <NovaGrid Name="GridVehicles" Layout="w:16;h:10" PageSize="10" SortMode="BuiltIn" LastColumnFullWidth="true" ActionSelectionChanged="GridRowChangedEvent">
        <Actions>
          <ActionItem Caption="{Resource Searching}" IsQuickAccess="true" Action="SearchEvent" />
          <ActionItem Caption="{Resource Fetching}" IsQuickAccess="true" Action="FetchObject" />
          <ActionItem Caption="{Resource New}" IsQuickAccess="true" Action="CreateObject" />
        </Actions>
        <Columns>
          <NovaGridColumn ValueBinding="Brand" IsSortable="true" ColumnWidth="100" />
          <NovaGridColumn ValueBinding="QtPassengers"  IsSortable="true" ColumnWidth="60" />
          <NovaGridColumn ValueBinding="PriceDay"  IsSortable="true" ColumnWidth="60" />
        </Columns>
      </NovaGrid>
    </NovaGroup>
  </NovaWizardPage>
  
  <NovaWizardPage Name="pageContact" Layout="w:30">
    <NovaGroup Name="groupContact" Layout="w:30">
      <NovaRef Name="Contact" Label="Contact" />
      <NovaImg Name="Image" Layout="h:9" />
    </NovaGroup>
  </NovaWizardPage>
</NovaForm>
