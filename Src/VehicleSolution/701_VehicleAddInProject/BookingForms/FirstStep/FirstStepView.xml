<?xml version="1.0" encoding="utf-8" ?>
<NovaForm Name="frmGreenTransportStartView" Title="FirstStepView" DialogBehavior="OkAndCancel" FormType="Wizard" xmlns="http://www.evidence.ch/nova/forms" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.evidence.ch/nova/forms http://rnd.glauxsoft.ch/nova/2.0.25.0/NovaForm.xsd">
  
  
  <NovaWizardPage Name="pageVehicle" Layout="w:16">
    <NovaGroup Name="groupVehicle" Layout="w:16">
      <NovaDateTime Name="StartDate" Label="From:" DateMode="DateTime" ActionChanged="SearchEvent"/>
      <NovaDateTime Name="EndDate" Label="To:" DateMode="DateTime" ActionChanged="SearchEvent"/>
      <NovaCombo Name="VehicleType" Label="Vehicle Class:" ActionChanged="SearchEvent"/>
      <NovaCombo Name="VehicleClass" Label="Vehicle Type:" ActionChanged="SearchEvent"/>

      <!--<NovaRef Name="Vehicle" Label="Choose Vehicle" />-->    
      <NovaGrid Name="GridVehicles" Layout="w:16;h:10" PageSize="10" SortMode="BuiltIn" LastColumnFullWidth="true" ActionSelectionChanged="GridRowChangedEvent">
        <Actions>
          <ActionItem Caption="A1" IsQuickAccess="true" Action="SearchEvent" />
          <ActionItem Caption="A2" IsQuickAccess="true" Action="SearchEvent" />
          <ActionItem Caption="A3" IsQuickAccess="true" Action="SearchEvent" />
        </Actions>
        <Columns>
          <NovaGridColumn ValueBinding="Brand" IsSortable="true" ColumnWidth="100" Text="Brand" ContentAlignment ="Left" />
          <NovaGridColumn ValueBinding="QtPassengers"  IsSortable="true" ColumnWidth="60" Text="Qty Passengers" ContentAlignment ="Center"/>
          <NovaGridColumn ValueBinding="PriceDay"  IsSortable="true" ColumnWidth="60" Text="Price/day" ContentAlignment ="Right" OutputFormat="C2"/>
        </Columns>
      </NovaGrid>
    </NovaGroup>
  </NovaWizardPage>
  
  <NovaWizardPage Name="pageContact" Layout="w:16">
    <NovaGroup Name="groupContact" Layout="w:16">
      
      <NovaRef Name="Contact" Label="Contact" ActionAfterSelectedObjectChanged="SelectContact" />      
      <NovaText Name="SearchField" Label="Search" ActionChanged="SearchEvent" />
      
      <NovaGrid Name="gridSearch" Layout="w:16;h:10" PageSize="10" SortMode="BuiltIn" LastColumnFullWidth="true" ActionSelectionChanged="GridRowChangedEvent">
        <Actions>
          <ActionItem Caption="Searching" IsQuickAccess="true" Action="SearchEvent" />
          <ActionItem Caption="Fetching" IsQuickAccess="true" Action="FetchObject" />
          <ActionItem Caption="New" IsQuickAccess="true" Action="CreateObject" />
        </Actions>
        <Columns>
          <NovaGridColumn ValueBinding="ToSelect" ColumnType="Checkbox" ColumnWidth="50" />
          <NovaGridColumn ValueBinding="PersonID" IsVisible="false" />
          <NovaGridColumn ValueBinding="CompanyID" IsVisible="false" />
          <NovaGridColumn ValueBinding="Nachname_Name" Text="FirstName" IsSortable="true" ColumnWidth="200" />
          <NovaGridColumn ValueBinding="Vorname_Zusatz" Text="VornameZusatz" IsSortable="true" ColumnWidth="150" />
          <NovaGridColumn ValueBinding="Street" Text="Street" IsSortable="true" ColumnWidth="150" />
          <NovaGridColumn ValueBinding="HouseNumber" Text="StreetNo" IsSortable="true" ColumnWidth="100" />
          <NovaGridColumn ValueBinding="PLZ" Text="PLZ" IsSortable="true" ColumnWidth="75" />
          <NovaGridColumn ValueBinding="Ort" Text="City" IsSortable="true" ColumnWidth="100" />
          <NovaGridColumn ValueBinding="AddressType" Text="AddressType" IsSortable="true" ColumnWidth="125" />
        </Columns>
      </NovaGrid>
    </NovaGroup>
  </NovaWizardPage>
</NovaForm>
